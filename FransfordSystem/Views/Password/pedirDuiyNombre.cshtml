@model FransfordSystem.ViewModels.VerificarDuiViewModel
@{
    ViewData["Title"] = "pedirDuiyNombre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="hold-transition login-page">
    <div class="hold-transition login-page">  
  <div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a href="../../index2.html" class="h1"><b>Fransford</b>System</a>
      </div>
      <div class="card-body">
        <p class="login-box-msg">Solicitud de Recuperacion</p>
        <form  action="pedirDuiyNombrePost" id="olvide" method="post">
            <input asp-for="dato" type="hidden" value="@Model.dato"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="input-group mb-3">
            <input asp-for="dui" type="text" value="" class="form-control" placeholder="DUI">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input asp-for="nombre" type="text" class="form-control" placeholder="Nombre">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
                <p>@Model.dato</p>
              <button type="submit" class="btn btn-primary btn-block">Verificar</button>
            </div>
            <!-- /.col -->
          </div>
        </form>

        <p class="mt-3 mb-1">
          <a href="/Home/Login">Iniciar Sesión</a>
        </p>
      </div>
      <!-- /.login-card-body -->
    </div>
  </div>
  <!-- /.login-box -->

  <!-- jQuery -->
  <script src="../../plugins/jquery/jquery.min.js"></script>
  
  <!-- Bootstrap 4 -->
  <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- AdminLTE App -->
  <script src="../../dist/js/adminlte.min.js"></script>
   </div>
</body>

