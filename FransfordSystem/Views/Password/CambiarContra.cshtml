@model FransfordSystem.ViewModels.CambiarContraViewModel



<div class="hold-transition login-page">  
<div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a href="../../index2.html" class="h1"><b>Fransford</b>System</a>
      </div>
      <div class="card-body">
        <p class="login-box-msg">Solicitud de Recuperacion</p>
        <form action="cambiarContraPost" method="post">
            <input asp-for="dato" type="hidden" value="@Model.dato" />
          <div class="input-group mb-3">
            <input asp-for="nuevaContra" type="password" class="form-control" placeholder="Nueva Contraseña">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input asp-for="repetirContra" type="password" class="form-control" placeholder="Repetir Contraseña">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-block">Cambiar Contraseña</button>
            </div>
            <!-- /.col -->
          </div>
        </form>

        <p class="mt-3 mb-1">
          <a href="/Home/Login">Iniciar Sesión</a>
        </p>
      </div>
      <!-- /.login-card-body -->
    </div>
  </div>
  <!-- /.login-box -->
    </div>
  <!-- jQuery -->
  <script src="../../plugins/jquery/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- AdminLTE App -->
  <script src="../../dist/js/adminlte.min.js"></script>
