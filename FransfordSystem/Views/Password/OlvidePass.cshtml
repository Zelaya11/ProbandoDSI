@model FransfordSystem.ViewModels.OlvidePassViewModel

@{
    ViewData["Title"] = "Olvide Mi Contra";
}


<div class="hold-transition login-page">  
<div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
           <a class="h1"><b>Fransford</b>System</a>
              </div>
               <div class="card-body">
        <p class="login-box-msg">Introduzca su correo asociado.</p>
        <form method="post" asp-action="OlvidePass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>@ViewData["mensaje"]</p>
            <div class="form-floating">
                <input asp-for="dato" class="form-control" placeholder="Correo " autocomplete="username" aria-required="true" />
                <span asp-validation-for="dato" class="text-danger"></span>
            </div>
            <br>
            <button id=btnCambiar type="submit" class="w-100 btn btn-lg btn-primary">Cambiar Contraseña</button>
        </form>
    </>
</div>
</div>
</div>
   </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
