@model FransfordSystem.ViewModels.RegistrarUsuarioViewModel
@{
    ViewData["Title"] = "Registrar Trabajadores";
}


<h1>Registrar Usuario</h1>
      
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="registrarUsuarioPost" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label > Nombre del Trabajador</label>
                <input asp-for="nombre" class="form-control"  aria-required="true" />
            </div>
            <br>
            <div class="form-floating">
                <label > Apellido del Trabajador</label>
                <input asp-for="apellido" class="form-control"  aria-required="true" />
            </div>
            <br>
            <div class="form-floating">
                <label > Fecha de Nacimiento</label>
                <input asp-for="fechaNac" class="form-control"/>
                <span asp-validation-for="fechaNac" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                 <label > Genero </label>
                 <br>
                <input asp-for="genero" type="radio" value="M" />&nbsp;&nbsp;&nbsp; Masculino               
                <br>
                <input asp-for="genero" type="radio" value="F" />&nbsp;&nbsp;&nbsp; Femenino
                <span asp-validation-for="genero" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <label > DUI </label>
                <input asp-for="dui" class="form-control" autocomplete="Dui" aria-required="true" />
            </div>
            <br>
            <div class="form-floating">
                <label > Cuenta Bancaria </label>
                <input asp-for="cuentaBancaria" class="form-control"  aria-required="true" />
            </div>
            <br>
            <div class="form-floating">
                <label > Correo Electronico </label>
                <input asp-for="correo" class="form-control"  aria-required="true" />
            </div>
         
            <br>
            <div class="form-floating">
                <label > Contraseña </label>
                <input asp-for="contra" class="form-control"  aria-required="true" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-success" />
            </div>
        </form>
        
    </div>
    <div class="col-md-6 col-md-offset-2">     
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}