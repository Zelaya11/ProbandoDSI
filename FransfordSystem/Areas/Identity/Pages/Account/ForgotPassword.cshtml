@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}



<div class="hold-transition login-page">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
           <a class="h1"><b>Fransford</b>System</a>
              </div>
               <div class="card-body">
        <p class="login-box-msg">Introduzca su correo asociado.</p>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" placeholder="Correo " autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br>
            <button id=btnCambiar type="submit" class="w-100 btn btn-lg btn-primary">Cambiar Contraseña</button>
        </form>
    </>
</div>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
